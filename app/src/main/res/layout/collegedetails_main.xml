<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="200dp"
    >

    <TableLayout
        android:id="@+id/relativeLayout13"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#909090"
        android:padding="10dp" >


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the College (Center of Exam) :"
                android:textColor="#000000" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <EditText
                android:id="@+id/COLLEGE"
                android:singleLine="true"
                android:nextFocusDown="@+id/INDEX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Index Number"
                android:textColor="#000000" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >


            <EditText
                android:id="@+id/INDEX"
                android:inputType="textVisiblePassword|textCapWords"
                android:singleLine="true"
                android:nextFocusDown="@+id/MONTHYEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Month and Year :"
                android:textColor="#000000" />

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >


            <EditText
                android:id="@+id/MONTHYEAR"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:nextFocusDown="@+id/STRIM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>

        </TableRow>




        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream (Science,Commerce, Arts) :"
                android:textColor="#000000"/>

        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >


            <EditText
                android:id="@+id/STRIM"
                android:capitalize="characters"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:nextFocusDown="@+id/SUBJECT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject :"
                android:textColor="#000000" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >



            <EditText
                android:id="@+id/SUBJECT"
                android:capitalize="characters"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:nextFocusDown="@+id/SUBCODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>


        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject Code :"
                android:textColor="#000000" />


        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <EditText
                android:id="@+id/SUBCODE"
                android:capitalize="characters"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:nextFocusDown="@+id/EMAIL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email 1 :"
                android:textColor="#000000" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >


            <EditText
                android:id="@+id/EMAIL1"
                android:capitalize="characters"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:nextFocusDown="@+id/EMAIL2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>


        </TableRow>


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email 2 :"
                android:textColor="#000000" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >


            <EditText
                android:id="@+id/EMAIL2"
                android:inputType="textVisiblePassword"
                android:singleLine="true"
                android:nextFocusDown="@+id/BUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textColorHint="#aeaeae"/>


        </TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnUpdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:textSize="14dip"
                android:paddingRight="8dp"
                android:text="Update" />

            <Button
                android:id="@+id/BtnCancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Cancel" />
        </LinearLayout>

    </TableLayout>

</ScrollView>



